<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Test Suite" parallel="classes" thread-count="4">
    <listeners>
        <listener class-name="com.homework.test.automation.listener.TestListener" />
    </listeners>

    <test name="UI Tests">
        <packages>
            <package name="com.homework.test.automation.tests.ui"/>
        </packages>
    </test>

    <test name="API Tests">
        <packages>
            <package name="com.homework.test.automation.tests.api"/>
        </packages>
    </test>
</suite>
